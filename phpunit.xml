<phpunit bootstrap="tests/bootstrap.php" colors="true" verbose="true" strict="true">
	<testsuites>
		<testsuite name="Peyote Test Suite">
			<directory>tests/</directory>
		</testsuite>
	</testsuites>

	<filter>
		<blacklist>
			<directory suffix=".php">tests/classes/</directory>
		</blacklist>
	</filter>

	<logging>
		<log type="coverage-html" target="dev/reports/coverage" charset="utf-8" />
	</logging>
</phpunit>