<?xml version="1.0" encoding="UTF-8"?>
<project name="Peyote" default="package" basedir=".">
	<property name="version" value="0.1.0" />

	<!-- Packages up the code to be uploaded -->
	<target name="package">
		<!-- Make the directory -->
		<mkdir dir="package/${version}" />

		<!-- Build the zip -->
		<zip destfile="${project.basedir}/package/${version}/peyote.zip">
			<fileset dir="${project.basedir}">
				<include name="classes/**" />
				<include name="README.md" />
			</fileset>
		</zip>
	</target>
</project>
