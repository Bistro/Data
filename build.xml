<?xml version="1.0" encoding="UTF-8"?>
<project name="Peyote" default="package" basedir=".">
	<property name="version" value="0.2.0" />

	<!-- Packages up the code to be uploaded -->
	<target name="package">
		<!-- Make the directory -->
		<mkdir dir="package/${version}" />

		<!-- Build the zip -->
		<zip destfile="${project.basedir}/package/${version}/Peyote.zip">
			<fileset dir="${project.basedir}/classes/">
				<include name="Peyote/**" />
			</fileset>
		</zip>
	</target>
</project>
