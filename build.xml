<?xml version="1.0" encoding="UTF-8"?>
<project name="Peyote" default="package" basedir=".">
	<property name="version" value="0.3.0" />

	<!-- Packages up the code to be uploaded -->
	<target name="package">
		<!-- Build the zip -->
		<zip destfile="${project.basedir}/dev/package/Peyote-${version}.zip">
			<fileset dir="${project.basedir}/">
				<include name="classes/Peyote/**" />
				<include name="README.md" />
			</fileset>
		</zip>
	</target>
</project>
